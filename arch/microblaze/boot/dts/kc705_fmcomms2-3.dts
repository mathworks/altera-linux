
/dts-v1/;
/include/ "kc705_fmcomms2-3_pl.dtsi"
/ {
	chosen {
		bootargs = "console=ttyUL0,115200";
		linux,stdout-path = &axi_uart;
		stdout-path = &axi_uart;
	};
	aliases {
		ethernet0 = &axi_ethernet;
		i2c0 = &axi_iic_main;
		serial0 = &axi_uart;
		serial1 = &sys_mb_debug;
		spi0 = &axi_spi;
	};
	memory {
		device_type = "memory";
		reg = <0x80000000 0x40000000>;
	};
};
&axi_ethernet {
	local-mac-address = [00 0a 35 00 00 02];
	phy-handle = <&phy0>;
};

&axi_ethernet_mdio {
	phy0: phy@7 {
		compatible = "marvell,88e1111";
		device_type = "ethernet-phy";
		reg = <7>;
	};
};

&axi_ad9361 {
	dmas = <&axi_ad9361_adc_dma 0>;
	dma-names = "rx";
	spibus-connected = <&adc0_ad9361>;
};

&axi_ad9361_dac_core_0 {
	clocks = <&adc0_ad9361 13>;
	clock-names = "sampl_clk";
	dmas = <&axi_ad9361_dac_dma 0>;
	dma-names = "tx";
};

&axi_ad9361_adc_dma {
	#dma-cells = <1>;
	clocks = <&clk_bus_0>;

	dma-channel {
		adi,buswidth = <64>;
		adi,type = <0>;
	};
};

&axi_ad9361_dac_dma {
	#dma-cells = <1>;
	clocks = <&clk_bus_0>;

	dma-channel {
		adi,buswidth = <64>;
		adi,type = <1>;
		adi,cyclic;
	};
};

&axi_iic_main {
	mux@74 {
		#address-cells = <1>;
		#size-cells = <0>;
		compatible = "pca9548";
		reg = <0x74>;

		mux1: i2c@1 { /* HPC */
			#size-cells = <0>;
			#address-cells = <1>;
			reg = <1>;
			eeprom@50 {
				compatible = "at24,24c02";
				reg = <0x50>;
			};

			eeprom@54 {
				compatible = "at24,24c02";
				reg = <0x54>;
			};
		};

		fmc_i2c: i2c@2 { /* LPC */
			#size-cells = <0>;
			#address-cells = <1>;
			reg = <2>;
		};
	};
};

&axi_linear_flash {
	#address-cells = <1>;
	#size-cells = <1>;
	partition@0x00000000 {
		label = "fpga";
		reg = <0x00000000 0x1380000>;
	};
	partition@0x01380000 {
		label = "boot";
		reg = <0x01380000 0x80000>;
	};
	partition@0x01400000 {
		label = "bootenv";
		reg = <0x01400000 0x40000>;
	};
	partition@0x01440000 {
		label = "image";
		reg = <0x01440000 0xBC0000>;
	};
};

#define fmc_spi axi_spi
#include "adi-fmcomms2.dtsi"

&adc0_ad9361 {
	en_agc-gpios = <&axi_gpio 12 8>;
	sync-gpios = <&axi_gpio 13 8>;
	reset-gpios = <&axi_gpio 14 8>;
	enable-gpios = <&axi_gpio 15 8>;
	txnrx-gpios = <&axi_gpio 16 8>;
};
